<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTagName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/large_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@color/colorDivider"
        android:layout_marginTop="@dimen/xsmall_margin"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="@id/tvTagName"
        app:layout_constraintStart_toStartOf="@id/tvTagName"
        app:layout_constraintTop_toBottomOf="@id/tvTagName" />

</androidx.constraintlayout.widget.ConstraintLayout>